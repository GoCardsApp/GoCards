        <!--<item name="android:windowBackground">#ff191c1e</item> doesn't work with HTC10 -->
        <item name="android:windowLightStatusBar">false</item>

        <item name="colorIcon">@color/grey_600</item>
        <item name="bottomNavigationBackground">?attr/colorSurface</item>

