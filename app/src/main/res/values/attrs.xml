<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- These are the standard attributes that make up a complete theme. -->
    <declare-styleable name="Theme">

        <attr name="bottomNavigationBackground" format="color" />
        <attr name="colorIcon" format="color" />

        <!-- Deck list -->
        <attr name="pasteBackground" format="color" />

        <!-- Study Card -->
        <attr name="colorStudyCardDivider" format="color" />
        <attr name="behindWindowBackground" format="color" />
        <attr name="cardBorder" format="color" />

        <!-- Card list -->
        <attr name="colorListDivider" format="color" />
        <attr name="opacityListDivider" format="color" />
        <attr name="colorItemTextColor" format="color" />
        <attr name="colorItemSearch" format="color" />
        <attr name="colorItemDisabledCard" format="color" />
        <attr name="colorItemForgottenCard" format="color" />
        <attr name="colorItemRememberedCards" format="color" />
        <attr name="colorActionBarItemSelected" format="color" />
        <attr name="colorItemSelected" format="color" />
        <attr name="colorItemActive" format="color" />

        <!-- Show last synced -->
        <attr name="colorItemRecentlyAddedDeckCard" format="color" />
        <attr name="colorItemRecentlyUpdatedDeckCard" format="color" />
        <attr name="colorItemRecentlyAddedFileCard" format="color" />
        <attr name="colorItemRecentlyUpdatedFileCard" format="color" />

    </declare-styleable>
</resources>