<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.App" parent="Theme.Material3.DynamicColors.DayNight">

        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>

        <item name="colorIcon">@color/grey_600</item>
        <item name="bottomNavigationBackground">?attr/colorSurface</item>

        <!-- Deck list -->
        <item name="pasteBackground">@android:color/system_neutral2_800</item>

        <!-- Study Card -->
        <item name="colorStudyCardDivider">@android:color/system_neutral2_800</item>
        <item name="behindWindowBackground">@android:color/system_accent2_900</item>
        <item name="cardBorder">@android:color/system_accent2_800</item>

        <!-- Card list -->
        <item name="colorListDivider">@android:color/system_neutral2_800</item>
        <item name="opacityListDivider">@color/opacity_80</item>
        <item name="colorItemTextColor">@android:color/white</item>
        <item name="colorItemSearch">@android:color/system_accent3_500</item>
        <item name="colorItemSelected">@android:color/system_accent2_700</item>
        <item name="colorItemActive">@android:color/system_accent3_800</item>
        <item name="colorItemDisabledCard">@color/grey_800</item>
        <item name="colorItemForgottenCard">@color/orange_900</item>
        <item name="colorItemRememberedCards">@color/green_800</item>

        <!-- Show last synced -->
        <item name="colorItemRecentlyAddedDeckCard">@color/green_700</item>
        <item name="colorItemRecentlyAddedFileCard">@color/green_400</item>
        <item name="colorItemRecentlyUpdatedDeckCard">@color/orange_900</item>
        <item name="colorItemRecentlyUpdatedFileCard">@color/orange_500</item>
    </style>

</resources>